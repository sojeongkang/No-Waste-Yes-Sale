<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    tools:context=".activity.Guest_mainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:text="Guest 환영합니다!"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_logout"
            android:layout_width="80dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bt_login"
            android:onClick="bt_logout"
            android:shadowColor="#FCFCFC"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="로그아웃"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:layout_marginLeft="80dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:src="@drawable/guest" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_alarm"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_login"
            android:onClick="bt_alarm"
            android:shadowColor="#FCFCFC"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="오늘의 Sale"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_foodcalendar"
            android:layout_width="195dp"
            android:layout_height="84dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bt_login"
            android:onClick="bt_foodcalendar"
            android:shadowColor="#FCFCFC"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Food Calendar ♡"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
